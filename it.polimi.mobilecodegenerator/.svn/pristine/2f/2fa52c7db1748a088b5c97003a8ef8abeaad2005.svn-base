<?xml version="1.0" encoding="ASCII"?>
<metamodel:Application
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:metamodel="http://metamodel/1.0"
    xsi:schemaLocation="http://metamodel/1.0 ../metamodel/metamodel.ecore"
    name="Multimedia"
    companyIdentifier="it.polimi">
  <viewControllers
      name="Videocamera">
    <videoView
        id="videoView"/>
    <videocameraController
        videoViewId="videoView"/>
  </viewControllers>
  <viewControllers
      name="Photocamera">
    <imageViews
        id="imageView"/>
    <fotocameraController
        imageViewId="imageView"/>
  </viewControllers>
  <viewControllers
      name="AudioRecorder">
    <audioPlayer
        id="audioPlayer"/>
    <audioRecorder
        audioPlayerId="audioPlayer"/>
  </viewControllers>
  <viewControllers
      name="Gallery"
      launcher="true">
    <buttons
        id="videosButton"
        title="Video">
      <clickListener>
        <navigation
            destination="VideoList"/>
      </clickListener>
    </buttons>
    <buttons
        id="photosButton"
        title="Foto">
      <clickListener>
        <navigation
            destination="PhotoGrid"/>
      </clickListener>
    </buttons>
    <buttons
        id="audioRecordingsButton"
        title="Audio">
      <clickListener>
        <navigation
            destination="AudioList"/>
      </clickListener>
    </buttons>
  </viewControllers>
  <viewControllers
      name="PhotoGrid">
    <gridViews
        id="photosGridView">
      <clickListener>
        <navigation
            destination="PhotoViewer"/>
      </clickListener>
    </gridViews>
  </viewControllers>
  <viewControllers
      name="VideoList">
    <listViews
        id="videosListView">
      <clickListener>
        <navigation
            destination="VideoViewer"/>
      </clickListener>
    </listViews>
  </viewControllers>
  <viewControllers
      name="AudioList">
    <listViews
        id="audiosListView">
      <clickListener>
        <navigation
            destination="AudioPlayer"/>
      </clickListener>
    </listViews>
  </viewControllers>
  <viewControllers
      name="PhotoViewer">
    <buttons
        id="deletePhotoButton"
        title="Delete">
      <clickListener/>
    </buttons>
    <imageViews
        id="imageViewerImageView"
        sourceType="localFile"/>
  </viewControllers>
  <viewControllers
      name="VideoViewer">
    <buttons
        id="deleteVideoButton"
        title="Delete">
      <clickListener/>
    </buttons>
    <videoView
        id="videoViewerVideoView"
        sourceType="localFile"/>
  </viewControllers>
  <viewControllers
      name="AudioPlayer">
    <buttons
        id="deleteAudioButton"
        title="Delete">
      <clickListener/>
    </buttons>
    <audioPlayer
        id="recordingAudioPlayer"
        sourceType="localFile"/>
  </viewControllers>
  <menu>
    <menuItems
        id="galleryItem"
        title="Gallery">
      <navigation
          destination="Gallery"/>
    </menuItems>
    <menuItems
        id="videocameraItem"
        title="Videocamera">
      <navigation
          destination="Videocamera"/>
    </menuItems>
    <menuItems
        id="photocameraItem"
        title="Fotocamera">
      <navigation
          destination="Photocamera"/>
    </menuItems>
    <menuItems
        id="audioRecorderItem"
        title="Registratore">
      <navigation
          destination="AudioRecorder"/>
    </menuItems>
  </menu>
</metamodel:Application>
